{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha tests",
    "start": "node index.js",
    "coverage": "nyc --check-coverage --lines 80 --per-file --reporter text npm test",
    "eslint": "eslint src/*.js"
  },
  "pre-push": {
    "tasks" : ["npm run coverage"],
    "onDirtyState" : "fail",
    "coloredOutput" : true
  },
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "express": "^4.16.4",
    "nyc": "^14.1.0",
    "prepush": "^3.1.11",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "mocha": "^6.1.4",
    "supertest": "^4.0.2"
  }
}
